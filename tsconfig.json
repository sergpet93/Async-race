{
  "compilerOptions": {
    "target": "es2016",                                  
    "esModuleInterop": true,    
    "module": "commonjs", 
    "moduleResolution": "node",                         
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                 
    "noImplicitAny": true,                    
    "skipLibCheck": true                                   
    },
    "exclude": ["node_modules"],
    "include": ["./src/**/*"],
}